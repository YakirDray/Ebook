@model IEnumerable<Book>

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold"> 住驻专</h1>
        <a href="@Url.Action("CreateBook", "Admin")"
            class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg">
            <i class="fas fa-plus ml-2"></i>住祝 住驻专 砖
        </a>
    </div>

    <!-- 住 驻砖 -->
    <div class="bg-white rounded-lg shadow p-6 mb-6">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">驻砖</label>
                <input type="text" id="searchInput" class="form-input w-full rounded-lg border-gray-300"
                    placeholder="驻砖 驻 转专转  专">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">住 驻 '专</label>
                <select id="genreFilter" class="form-select w-full rounded-lg border-gray-300">
                    <option value=""> '专</option>
                    <option value="住驻专转 驻">住驻专转 驻</option>
                    <option value="住驻专转 注">住驻专转 注</option>
                    <option value="住驻专 ">住驻专 </option>
                    <option value="住驻专 ">住驻专 </option>
                    <option value="注 ">注 </option>
                    <option value="转">转</option>
                    <option value="专">专</option>
                    <option value="专驻">专驻</option>
                </select>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1"> 驻</label>
                <select id="sortBy" class="form-select w-full rounded-lg border-gray-300 custom-select">
                    <option value="price_asc" class="custom-option">猬锔</option>
                    <option value="price_desc" class="custom-option">猬锔拽专</option>
                    <option value="copies_asc" class="custom-option">注转拽 </option>
                    <option value="copies_desc" class="custom-option">注转拽 </option>
                </select>

            </div>
        </div>
    </div>

    <!-- 转 住驻专 -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">转专转
                    </th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">专
                    </th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">'专
                    </th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">专
                    </th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">注转拽
                    </th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">驻注转
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var book in Model)
                {
                    <tr>
                        <td class="px-6 py-4">
                            <div class="flex items-center">
                                @if (!string.IsNullOrEmpty(book.CoverImageUrl))
                                {
                                    <img src="@book.CoverImageUrl" class="h-10 w-8 object-cover rounded ml-2" />
                                }
                                <div>
                                    <div class="text-sm font-medium text-gray-900">@book.Title</div>
                                    @if (book.OriginalPrice.HasValue)
                                    {
                                        <span class="text-xs text-red-500">爪注!</span>
                                    }
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @book.Author
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @book.Genre
                        </td>

                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @if (book.OriginalPrice.HasValue)
                            {
                                <div class="line-through">@book.OriginalPrice</div>
                                <div class="text-red-600">@book.BuyPrice</div>
                            }
                            else
                            {
                                <div>@book.BuyPrice</div>
                            }
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span
                                class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                       @(book.AvailableCopies > 0 ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                                @book.AvailableCopies
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                            <div class="flex space-x-2">
                                <a href="@Url.Action("EditBook", new { id = book.Id })"
                                    class="text-indigo-600 hover:text-indigo-900">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button onclick="deleteBook(@book.Id)" class="text-red-600 hover:text-red-900">
                                    <i class="fas fa-trash"></i>
                                </button>
                                <button onclick="openDiscountModal(@book.Id)" class="text-yellow-600 hover:text-yellow-900">
                                    <i class="fas fa-percent"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



@section Scripts {
    <script>
        // 驻拽爪转 拽转 住驻专
        function deleteBook(id) {
            if (confirm(' 转  砖专爪 拽 住驻专 ?')) {
                $.post('@Url.Action("DeleteBook")', { id: id })
                    .done(function () {
                        location.reload(); // 专注 祝 专 拽
                    })
                    .fail(function () {
                        alert('专注 砖 拽转 住驻专');
                    });
            }

        }
        $(document).ready(function () {
            //  砖 砖专转 驻砖 住 '专
            $('#searchInput, #genreFilter, #sortBy').on('input change', function () {
                filterBooks();
            });

            // 驻拽爪转 住 住驻专 驻 转专转, 专 '专
            function filterBooks() {
                var search = $('#searchInput').val().toLowerCase();
                var genre = $('#genreFilter').val().toLowerCase().trim();

                $('tbody tr').each(function () {
                    var title = $(this).find('td:nth-child(1)').text().toLowerCase();
                    var author = $(this).find('td:nth-child(2)').text().toLowerCase();
                    var bookGenre = $(this).find('td:nth-child(3)').text().toLowerCase().trim();

                    var showRow = true;

                    // 住 驻 驻砖 转专转  专
                    if (search && !(title.includes(search) || author.includes(search))) {
                        showRow = false;
                    }

                    // 住 驻 '专 (砖 专 注 includes)
                    if (genre && !bookGenre.includes(genre)) {
                        showRow = false;
                    }

                    // 爪  住转专 砖 砖专转 转 转爪转 住
                    $(this).toggle(showRow);
                });
            }

            //  砖专转 
            $('#sortBy').change(function () {
                sortTable();
            });

            function sortTable() {
                var sortBy = $('#sortBy').val();
                var sortIndex = sortBy.includes("price") ? 3 : 4; // 注转 专  注转拽
                var isAscending = sortBy.includes("asc");

                var rows = $('tbody tr').get();
                rows.sort(function (a, b) {
                    var valA = getNumericValue($(a).children('td').eq(sortIndex));
                    var valB = getNumericValue($(b).children('td').eq(sortIndex));

                    return isAscending ? valA - valB : valB - valA;
                });

                $.each(rows, function (index, row) {
                    $('table').children('tbody').append(row);
                });
            }

            // 住专转 转  住驻专 专 住驻专
            function getNumericValue(cell) {
                var text = cell.text();
                var discountedPrice = cell.find('.text-red-600').text(); // 转专 专 爪注
                var price = discountedPrice ? discountedPrice : text;
                return Number(price.replace(/[^0-9.-]/g, ""));
            }
        });


    </script>
}
