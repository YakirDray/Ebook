@model AdminDashboardViewModel

<div class="container mx-auto px-4 py-8">
    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-2xl font-bold mb-2">פאנל ניהול</h1>
        <p class="text-gray-600">ברוכים הבאים למערכת ניהול הספרייה הדיגיטלית</p>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center">
                <div class="p-3 bg-blue-100 rounded-full">
                    <i class="fas fa-book text-blue-500 text-xl"></i>
                </div>
                <div class="mr-4">
                    <p class="text-gray-500">סה"כ ספרים</p>
                    <p class="text-2xl font-bold">@Model.TotalBooks</p>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center">
                <div class="p-3 bg-green-100 rounded-full">
                    <i class="fas fa-users text-green-500 text-xl"></i>
                </div>
                <div class="mr-4">
                    <p class="text-gray-500">משתמשים</p>
                    <p class="text-2xl font-bold">@Model.TotalUsers</p>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center">
                <div class="p-3 bg-purple-100 rounded-full">
                    <i class="fas fa-book-reader text-purple-500 text-xl"></i>
                </div>
                <div class="mr-4">
                    <p class="text-gray-500">השאלות פעילות</p>
                    <p class="text-2xl font-bold">@Model.ActiveBorrows</p>
                    <a href="@Url.Action("Index", "Borrow")"
                        class="mt-2 inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                        הצג השאלות פעילות
                    </a>
                </div>

            </div>
        </div>

        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center">
                <div class="p-3 bg-yellow-100 rounded-full">
                    <i class="fas fa-shopping-cart text-yellow-500 text-xl"></i>
                </div>
                <div class="mr-4">
                    <p class="text-gray-500">סה"כ מכירות</p>
                    <p class="text-2xl font-bold">@Model.TotalSales</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white rounded-lg shadow p-6 mb-8">
        <h2 class="text-xl font-bold mb-4">פעולות מהירות</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <a href="@Url.Action("CreateBook", "Admin")"
                class="bg-blue-500 text-white rounded-lg p-4 text-center hover:bg-blue-600">
                <i class="fas fa-plus-circle mb-2"></i>
                <p>הוספת ספר</p>
            </a>
            <a href="@Url.Action("ManageBooks", "Admin")"
                class="bg-green-500 text-white rounded-lg p-4 text-center hover:bg-green-600">
                <i class="fas fa-books mb-2"></i>
                <p>ניהול ספרים</p>
            </a>
            <a href="@Url.Action("ManageUsers", "Admin")"
                class="bg-purple-500 text-white rounded-lg p-4 text-center hover:bg-purple-600">
                <i class="fas fa-users-cog mb-2"></i>
                <p>ניהול משתמשים</p>
            </a>
            <a href="@Url.Action("WaitingList", "Admin")"
                class="bg-yellow-500 text-white rounded-lg p-4 text-center hover:bg-yellow-600">
                <i class="fas fa-list mb-2"></i>
                <p>רשימות המתנה</p>
            </a>
        </div>
    </div>
</div>