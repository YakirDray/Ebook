<!-- Views/Account/Register.cshtml -->
@model MyEBookLibrary.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "הרשמה";
}

<div class="max-w-md mx-auto mt-8">
    <div class="bg-white p-8 rounded-lg shadow-md">
        <h2 class="text-2xl font-bold mb-6 text-center">הרשמה</h2>

        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

            <div class="mb-4">
                <label asp-for="UserName" class="block text-gray-700 text-sm font-bold mb-2">שם משתמש</label>
                <input asp-for="UserName" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="UserName" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Email" class="block text-gray-700 text-sm font-bold mb-2">אימייל</label>
                <input asp-for="Email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Password" class="block text-gray-700 text-sm font-bold mb-2">סיסמה</label>
                <input asp-for="Password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-6">
                <label asp-for="ConfirmPassword" class="block text-gray-700 text-sm font-bold mb-2">אימות סיסמה</label>
                <input asp-for="ConfirmPassword" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
            </div>

            <button type="submit" class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                הירשם
            </button>
        </form>

        <div class="text-center mt-4">
            <a asp-action="Login" class="text-blue-500 hover:text-blue-700">כבר יש לך חשבון? התחבר כאן</a>
        </div>
    </div>
</div>